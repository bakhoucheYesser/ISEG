{# templates/student/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des étudiants{% endblock %}

{% block content %}
    <div class="space-y-8">
        <!-- Header -->
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-iseg-navy-900">Étudiants</h1>
                <p class="text-gray-600 mt-1">{{ total }} étudiants au total</p>
            </div>
            <div class="flex space-x-3">
                <a href="{{ path('student_search') }}" class="btn btn-outline">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    Rechercher
                </a>
                <a href="{{ path('student_new') }}" class="btn btn-primary">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Nouvel étudiant
                </a>
            </div>
        </div>

        <!-- Filtres -->
        <div class="card">
            <div class="card-body">
                <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label class="form-label">Recherche</label>
                        <input type="text" name="search" value="{{ search }}"
                               class="form-input" placeholder="CIN, nom, prénom...">
                    </div>

                    <div>
                        <label class="form-label">Niveau</label>
                        <select name="level" class="form-select">
                            <option value="">Tous les niveaux</option>
                            {% for lvl in levels %}
                                <option value="{{ lvl.code }}" {{ level == lvl.code ? 'selected' : '' }}>
                                    {{ lvl.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div>
                        <label class="form-label">Statut paiement</label>
                        <select name="payment_status" class="form-select">
                            <option value="">Tous</option>
                            <option value="FULLY_PAID" {{ payment_status == 'FULLY_PAID' ? 'selected' : '' }}>Payé</option>
                            <option value="PARTIAL" {{ payment_status == 'PARTIAL' ? 'selected' : '' }}>Partiel</option>
                            <option value="NOT_PAID" {{ payment_status == 'NOT_PAID' ? 'selected' : '' }}>Non payé</option>
                        </select>
                    </div>

                    <div class="flex items-end">
                        <button type="submit" class="btn btn-secondary w-full">
                            Filtrer
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Liste des étudiants -->
        <div class="card">
            <div class="overflow-x-auto">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Étudiant</th>
                        <th>Formation</th>
                        <th>Classe</th>
                        <th>Statut paiement</th>
                        <th>Inscription</th>
                        <th class="no-print">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for enrollment in enrollments %}
                        <tr>
                            <td>
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <div class="h-10 w-10 rounded-full bg-iseg-gold-100 flex items-center justify-center">
                                            <span class="text-sm font-medium text-iseg-gold-800">
                                                {{ enrollment.student.firstName|first }}{{ enrollment.student.lastName|first }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ enrollment.student.fullName }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            CIN: {{ enrollment.student.cin }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="text-sm text-gray-900">{{ enrollment.formation.name }}</div>
                                <div class="text-sm text-gray-500">{{ enrollment.formation.academicLevel.name }}</div>
                            </td>
                            <td class="text-sm text-gray-900">
                                {{ enrollment.classRoom.name }}
                            </td>
                            <td>
                                <span class="badge
                                    {% if enrollment.paymentStatus == 'FULLY_PAID' %}badge-success
                                    {% elseif enrollment.paymentStatus == 'PARTIAL' %}badge-warning
                                    {% else %}badge-danger{% endif %}">
                                    {% if enrollment.paymentStatus == 'FULLY_PAID' %}Payé
                                    {% elseif enrollment.paymentStatus == 'PARTIAL' %}Partiel
                                    {% else %}Non payé{% endif %}
                                </span>
                                <div class="text-xs text-gray-500 mt-1">
                                    {{ enrollment.totalPaid|number_format(2, ',', ' ') }} / {{ enrollment.totalAmount|number_format(2, ',', ' ') }} DT
                                </div>
                            </td>
                            <td class="text-sm text-gray-500">
                                {{ enrollment.enrollmentDate|date('d/m/Y') }}
                            </td>
                            <td class="no-print">
                                <div class="flex items-center space-x-2">
                                    <a href="{{ path('student_show', {id: enrollment.student.id}) }}"
                                       class="text-iseg-blue-600 hover:text-iseg-blue-900">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </a>
                                    <a href="{{ path('student_edit', {id: enrollment.student.id}) }}"
                                       class="text-iseg-gold-600 hover:text-iseg-gold-900">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </a>
                                    {% if enrollment.paymentStatus != 'FULLY_PAID' %}
                                        <a href="{{ path('payment_new', {id: enrollment.id}) }}"
                                           class="text-green-600 hover:text-green-900">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                            </svg>
                                        </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-8 text-gray-500">
                                Aucun étudiant trouvé
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        {% if total_pages > 1 %}
            <div class="pagination">
                <div class="flex-1 flex justify-between sm:hidden">
                    {% if current_page > 1 %}
                        <a href="{{ path('student_index', {page: current_page - 1, search: search, level: level, payment_status: payment_status}) }}"
                           class="pagination-link rounded-l-md">Précédent</a>
                    {% endif %}
                    {% if current_page < total_pages %}
                        <a href="{{ path('student_index', {page: current_page + 1, search: search, level: level, payment_status: payment_status}) }}"
                           class="pagination-link rounded-r-md">Suivant</a>
                    {% endif %}
                </div>

                <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm text-gray-700">
                            Affichage de
                            <span class="font-medium">{{ ((current_page - 1) * 20) + 1 }}</span>
                            à
                            <span class="font-medium">{{ [current_page * 20, total]|min }}</span>
                            sur
                            <span class="font-medium">{{ total }}</span>
                            résultats
                        </p>
                    </div>
                    <div>
                        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                            {% for page in 1..total_pages %}
                                {% if page == current_page %}
                                    <span class="pagination-link current border rounded-md">{{ page }}</span>
                                {% else %}
                                    <a href="{{ path('student_index', {page: page, search: search, level: level, payment_status: payment_status}) }}"
                                       class="pagination-link border rounded-md">{{ page }}</a>
                                {% endif %}
                            {% endfor %}
                        </nav>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
