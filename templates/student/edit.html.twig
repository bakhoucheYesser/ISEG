{# templates/student/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier {{ student.fullName }}{% endblock %}

{% block content %}
    <div class="space-y-8">
        <!-- Header -->
        <div>
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-4">
                    <li>
                        <a href="{{ path('dashboard') }}" class="text-gray-400 hover:text-gray-500">
                            <svg class="flex-shrink-0 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                            </svg>
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <a href="{{ path('student_index') }}" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">Étudiants</a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <a href="{{ path('student_show', {id: student.id}) }}" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">{{ student.fullName }}</a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="ml-4 text-sm font-medium text-gray-500">Modifier</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <div class="mt-4 flex items-center space-x-4">
                <div class="flex-shrink-0">
                    <div class="h-12 w-12 rounded-full bg-iseg-gold-100 flex items-center justify-center">
                        <span class="text-lg font-medium text-iseg-gold-800">
                            {{ student.firstName|first }}{{ student.lastName|first }}
                        </span>
                    </div>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-iseg-navy-900">Modifier {{ student.fullName }}</h1>
                    <p class="text-gray-600 mt-1">CIN: {{ student.cin }}</p>
                </div>
            </div>
        </div>

        <!-- Formulaire -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-lg font-semibold text-iseg-navy-900">Informations personnelles</h2>
                        <p class="text-sm text-gray-600">Modifiez les informations de l'étudiant</p>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                        <!-- Informations de base -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                {{ form_label(form.cin, null, {'label_attr': {'class': 'form-label'}}) }} *
                                {{ form_widget(form.cin, {'attr': {'class': 'form-input', 'readonly': true}}) }}
                                {{ form_errors(form.cin) }}
                                <p class="form-help">Le numéro CIN ne peut pas être modifié</p>
                            </div>

                            <div>
                                {{ form_label(form.nationality, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nationality, {'attr': {'class': 'form-input'}}) }}
                                {{ form_errors(form.nationality) }}
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                {{ form_label(form.firstName, null, {'label_attr': {'class': 'form-label'}}) }} *
                                {{ form_widget(form.firstName, {'attr': {'class': 'form-input'}}) }}
                                {{ form_errors(form.firstName) }}
                            </div>

                            <div>
                                {{ form_label(form.lastName, null, {'label_attr': {'class': 'form-label'}}) }} *
                                {{ form_widget(form.lastName, {'attr': {'class': 'form-input'}}) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                        </div>

                        <!-- Informations de contact -->
                        <div class="border-t pt-6">
                            <h3 class="text-md font-medium text-gray-900 mb-4">Informations de contact</h3>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    {{ form_label(form.emergencyContactName, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.emergencyContactName, {'attr': {'class': 'form-input'}}) }}
                                    {{ form_errors(form.emergencyContactName) }}
                                </div>

                                <div>
                                    {{ form_label(form.emergencyContactPhone, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.emergencyContactPhone, {'attr': {'class': 'form-input'}}) }}
                                    {{ form_errors(form.emergencyContactPhone) }}
                                </div>
                            </div>
                        </div>

                        <!-- Notes -->
                        <div class="border-t pt-6">
                            <div>
                                {{ form_label(form.notes, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.notes, {'attr': {'class': 'form-textarea', 'rows': 4}}) }}
                                {{ form_errors(form.notes) }}
                                <p class="form-help">Notes administratives internes (optionnel)</p>
                            </div>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="flex justify-between items-center pt-6 border-t">
                            <a href="{{ path('student_show', {id: student.id}) }}" class="btn btn-outline">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                                </svg>
                                Annuler
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                Enregistrer les modifications
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="space-y-6">
                    <!-- Aperçu des modifications -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="text-lg font-semibold text-iseg-navy-900">Informations actuelles</h3>
                        </div>
                        <div class="card-body text-sm space-y-3">
                            <div>
                                <span class="font-medium text-gray-600">Nom complet:</span>
                                <div class="text-gray-900">{{ student.fullName }}</div>
                            </div>
                            <div>
                                <span class="font-medium text-gray-600">CIN:</span>
                                <div class="text-gray-900">{{ student.cin }}</div>
                            </div>
                            {% if student.email %}
                                <div>
                                    <span class="font-medium text-gray-600">Email:</span>
                                    <div class="text-gray-900">{{ student.email }}</div>
                                </div>
                            {% endif %}
                            {% if student.phone %}
                                <div>
                                    <span class="font-medium text-gray-600">Téléphone:</span>
                                    <div class="text-gray-900">{{ student.phone }}</div>
                                </div>
                            {% endif %}
                            <div>
                                <span class="font-medium text-gray-600">Nationalité:</span>
                                <div class="text-gray-900">{{ student.nationality }}</div>
                            </div>
                            {% if student.dateOfBirth %}
                                <div>
                                    <span class="font-medium text-gray-600">Date de naissance:</span>
                                    <div class="text-gray-900">{{ student.dateOfBirth|date('d/m/Y') }}</div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Aide -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="text-lg font-semibold text-iseg-navy-900">Aide</h3>
                        </div>
                        <div class="card-body space-y-4">
                            <div class="bg-blue-50 p-4 rounded-lg">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h4 class="text-sm font-medium text-blue-800">Information</h4>
                                        <div class="mt-2 text-sm text-blue-700">
                                            Les modifications seront immédiatement visibles dans tous les documents et reçus futurs.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-3">
                                <h4 class="text-sm font-medium text-gray-900">Conseils :</h4>
                                <ul class="text-sm text-gray-600 space-y-2">
                                    <li class="flex items-start">
                                        <span class="text-green-500 mr-2">•</span>
                                        Le CIN ne peut pas être modifié pour des raisons de sécurité
                                    </li>
                                    <li class="flex items-start">
                                        <span class="text-green-500 mr-2">•</span>
                                        Vérifiez l'email car il est utilisé pour les communications
                                    </li>
                                    <li class="flex items-start">
                                        <span class="text-green-500 mr-2">•</span>
                                        Les modifications n'affectent pas les paiements déjà effectués
                                    </li>
                                </ul>
                            </div>

                            <div class="bg-yellow-50 p-4 rounded-lg">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h4 class="text-sm font-medium text-yellow-800">Attention</h4>
                                        <div class="mt-2 text-sm text-yellow-700">
                                            Assurez-vous que les informations sont correctes avant de sauvegarder.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Historique des modifications -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="text-lg font-semibold text-iseg-navy-900">Historique</h3>
                        </div>
                        <div class="card-body text-sm text-gray-600 space-y-2">
                            <div class="flex justify-between">
                                <span>Créé le</span>
                                <span>{{ student.createdAt|date('d/m/Y') }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Dernière modification</span>
                                <span>{{ student.updatedAt|date('d/m/Y H:i') }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}form.email, null, {'label_attr': {'class': 'form-label'}}) }}
