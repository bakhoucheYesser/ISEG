{# templates/student/enroll.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscrire {{ student.fullName }}{% endblock %}

{% block content %}
    <div class="space-y-8">
        <!-- Header -->
        <div>
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-4">
                    <li>
                        <a href="{{ path('dashboard') }}" class="text-gray-400 hover:text-gray-500">
                            <svg class="flex-shrink-0 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                            </svg>
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <a href="{{ path('student_index') }}" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">Étudiants</a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <a href="{{ path('student_show', {id: student.id}) }}" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">{{ student.fullName }}</a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="ml-4 text-sm font-medium text-gray-500">Inscription</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <div class="mt-4 flex items-center space-x-4">
                <div class="flex-shrink-0">
                    <div class="h-12 w-12 rounded-full bg-iseg-gold-100 flex items-center justify-center">
                        <span class="text-lg font-medium text-iseg-gold-800">
                            {{ student.firstName|first }}{{ student.lastName|first }}
                        </span>
                    </div>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-iseg-navy-900">Inscrire {{ student.fullName }}</h1>
                    <p class="text-gray-600 mt-1">CIN: {{ student.cin }}</p>
                </div>
            </div>
        </div>

        <!-- Formulaire d'inscription -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-lg font-semibold text-iseg-navy-900">Détails de l'inscription</h2>
                        <p class="text-sm text-gray-600">Sélectionnez la formation et configurez l'inscription</p>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                        <!-- Sélection de la formation -->
                        <div>
                            <h3 class="text-md font-medium text-gray-900 mb-4">Formation et classe</h3>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    {{ form_label(form.formation, null, {'label_attr': {'class': 'form-label'}}) }} *
                                    {{ form_widget(form.formation, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.formation) }}
                                    <p class="form-help">Sélectionnez la formation à laquelle inscrire l'étudiant</p>
                                </div>

                                <div>
                                    {{ form_label(form.classRoom, null, {'label_attr': {'class': 'form-label'}}) }} *
                                    {{ form_widget(form.classRoom, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.classRoom) }}
                                    <p class="form-help">Choisissez une classe disponible</p>
                                </div>
                            </div>
                        </div>

                        <!-- Mode de paiement -->
                        <div class="border-t pt-6">
                            <h3 class="text-md font-medium text-gray-900 mb-4">Mode de paiement</h3>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    {{ form_label(form.paymentMode, null, {'label_attr': {'class': 'form-label'}}) }} *
                                    {{ form_widget(form.paymentMode, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.paymentMode) }}
                                    <p class="form-help">Définit la fréquence des paiements</p>
                                </div>

                                <div>
                                    {{ form_label(form.academicYear, null, {'label_attr': {'class': 'form-label'}}) }} *
                                    {{ form_widget(form.academicYear, {'attr': {'class': 'form-input'}}) }}
                                    {{ form_errors(form.academicYear) }}
                                    <p class="form-help">Format: YYYY-YYYY (ex: 2024-2025)</p>
                                </div>
                            </div>
                        </div>

                        <!-- Récapitulatif des frais -->
                        <div class="border-t pt-6">
                            <h3 class="text-md font-medium text-gray-900 mb-4">Récapitulatif des frais</h3>
                            <div class="bg-gray-50 rounded-lg p-4">
                                <div class="text-sm text-gray-600 mb-2">
                                    Les montants seront calculés automatiquement en fonction de la formation sélectionnée.
                                </div>
                                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm">
                                    <div>
                                        <span class="font-medium text-gray-700">Frais d'inscription:</span>
                                        <div class="text-gray-900" id="registration-fees">-</div>
                                    </div>
                                    <div>
                                        <span class="font-medium text-gray-700">Frais de formation:</span>
                                        <div class="text-gray-900" id="formation-fees">-</div>
                                    </div>
                                    <div>
                                        <span class="font-medium text-gray-700">Total:</span>
                                        <div class="text-lg font-semibold text-iseg-navy-900" id="total-fees">-</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="flex justify-between items-center pt-6 border-t">
                            <a href="{{ path('student_show', {id: student.id}) }}" class="btn btn-outline">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                                </svg>
                                Annuler
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                                </svg>
                                Inscrire l'étudiant
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="space-y-6">
                    <!-- Informations sur l'étudiant -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="text-lg font-semibold text-iseg-navy-900">Étudiant</h3>
                        </div>
                        <div class="card-body">
                            <div class="flex items-center space-x-3 mb-4">
                                <div class="flex-shrink-0">
                                    <div class="h-10 w-10 rounded-full bg-iseg-gold-100 flex items-center justify-center">
                                        <span class="text-sm font-medium text-iseg-gold-800">
                                            {{ student.firstName|first }}{{ student.lastName|first }}
                                        </span>
                                    </div>
                                </div>
                                <div>
                                    <div class="font-medium text-gray-900">{{ student.fullName }}</div>
                                    <div class="text-sm text-gray-500">{{ student.cin }}</div>
                                </div>
                            </div>

                            <dl class="space-y-2 text-sm">
                                {% if student.email %}
                                    <div class="flex justify-between">
                                        <dt class="text-gray-500">Email:</dt>
                                        <dd class="text-gray-900">{{ student.email }}</dd>
                                    </div>
                                {% endif %}
                                {% if student.phone %}
                                    <div class="flex justify-between">
                                        <dt class="text-gray-500">Téléphone:</dt>
                                        <dd class="text-gray-900">{{ student.phone }}</dd>
                                    </div>
                                {% endif %}
                                <div class="flex justify-between">
                                    <dt class="text-gray-500">Nationalité:</dt>
                                    <dd class="text-gray-900">{{ student.nationality }}</dd>
                                </div>
                            </dl>
                        </div>
                    </div>

                    <!-- Aide -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="text-lg font-semibold text-iseg-navy-900">Guide d'inscription</h3>
                        </div>
                        <div class="card-body space-y-4">
                            <div class="space-y-3">
                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0 w-6 h-6 bg-iseg-gold-100 rounded-full flex items-center justify-center text-xs font-medium text-iseg-gold-800">1</div>
                                    <div class="text-sm">
                                        <div class="font-medium text-gray-900">Choisir la formation</div>
                                        <div class="text-gray-600">Sélectionnez la formation appropriée au niveau de l'étudiant</div>
                                    </div>
                                </div>

                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0 w-6 h-6 bg-iseg-gold-100 rounded-full flex items-center justify-center text-xs font-medium text-iseg-gold-800">2</div>
                                    <div class="text-sm">
                                        <div class="font-medium text-gray-900">Assigner une classe</div>
                                        <div class="text-gray-600">Vérifiez la disponibilité des places dans la classe</div>
                                    </div>
                                </div>

                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0 w-6 h-6 bg-iseg-gold-100 rounded-full flex items-center justify-center text-xs font-medium text-iseg-gold-800">3</div>
                                    <div class="text-sm">
                                        <div class="font-medium text-gray-900">Mode de paiement</div>
                                        <div class="text-gray-600">Définissez la fréquence des paiements selon les besoins</div>
                                    </div>
                                </div>
                            </div>

                            <div class="bg-blue-50 p-4 rounded-lg">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h4 class="text-sm font-medium text-blue-800">Prochaine étape</h4>
                                        <div class="mt-2 text-sm text-blue-700">
                                            Après l'inscription, vous pourrez enregistrer le premier paiement de l'étudiant.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modes de paiement disponibles -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="text-lg font-semibold text-iseg-navy-900">Modes de paiement</h3>
                        </div>
                        <div class="card-body">
                            <div class="space-y-3 text-sm">
                                <div class="flex justify-between items-center p-2 bg-gray-50 rounded">
                                    <span class="font-medium">Mensuel</span>
                                    <span class="text-gray-600">12 paiements</span>
                                </div>
                                <div class="flex justify-between items-center p-2 bg-gray-50 rounded">
                                    <span class="font-medium">Trimestriel</span>
                                    <span class="text-gray-600">4 paiements</span>
                                </div>
                                <div class="flex justify-between items-center p-2 bg-gray-50 rounded">
                                    <span class="font-medium">Semestriel</span>
                                    <span class="text-gray-600">2 paiements</span>
                                </div>
                                <div class="flex justify-between items-center p-2 bg-gray-50 rounded">
                                    <span class="font-medium">Annuel</span>
                                    <span class="text-gray-600">1 paiement</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script pour calculer les frais dynamiquement -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const formationSelect = document.querySelector('select[name="enrollment[formation]"]');
            const registrationFeesSpan = document.getElementById('registration-fees');
            const formationFeesSpan = document.getElementById('formation-fees');
            const totalFeesSpan = document.getElementById('total-fees');

            if (formationSelect) {
                formationSelect.addEventListener('change', function() {
                    // Ici vous pourriez ajouter une requête AJAX pour récupérer les frais
                    // Pour l'instant, on affiche des valeurs par défaut
                    if (this.value) {
                        registrationFeesSpan.textContent = '500,00 DT';
                        formationFeesSpan.textContent = '2 500,00 DT';
                        totalFeesSpan.textContent = '3 000,00 DT';
                    } else {
                        registrationFeesSpan.textContent = '-';
                        formationFeesSpan.textContent = '-';
                        totalFeesSpan.textContent = '-';
                    }
                });
            }
        });
    </script>
{% endblock %}
