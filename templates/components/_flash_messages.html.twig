{# templates/components/_flash_messages.html.twig #}
{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-message fixed top-20 right-4 z-50 transform transition-all duration-300 translate-x-0 opacity-100">
            <div class="max-w-sm w-full bg-white shadow-lg rounded-lg pointer-events-auto ring-1 ring-black ring-opacity-5 overflow-hidden">
                <div class="p-4">
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            {% if type == 'success' %}
                                <div class="bg-green-100 rounded-full p-1">
                                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                </div>
                            {% elseif type == 'error' or type == 'danger' %}
                                <div class="bg-red-100 rounded-full p-1">
                                    <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </div>
                            {% elseif type == 'warning' %}
                                <div class="bg-yellow-100 rounded-full p-1">
                                    <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                                    </svg>
                                </div>
                            {% else %}
                                <div class="bg-iseg-blue-100 rounded-full p-1">
                                    <svg class="w-5 h-5 text-iseg-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                            {% endif %}
                        </div>
                        <div class="ml-3 w-0 flex-1 pt-0.5">
                            <p class="text-sm font-medium text-gray-900">
                                {% if type == 'success' %}
                                    Succ√®s
                                {% elseif type == 'error' or type == 'danger' %}
                                    Erreur
                                {% elseif type == 'warning' %}
                                    Attention
                                {% else %}
                                    Information
                                {% endif %}
                            </p>
                            <p class="mt-1 text-sm text-gray-500">{{ message|raw }}</p>
                        </div>
                        <div class="ml-4 flex-shrink-0 flex">
                            <button onclick="this.closest('.flash-message').remove()"
                                    class="bg-white rounded-md inline-flex text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                <span class="sr-only">Fermer</span>
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Barre de progression pour l'auto-disparition -->
                <div class="bg-gray-200 h-1">
                    <div class="h-1 {% if type == 'success' %}bg-green-500{% elseif type == 'error' or type == 'danger' %}bg-red-500{% elseif type == 'warning' %}bg-yellow-500{% else %}bg-iseg-blue-500{% endif %} progress-bar"></div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}

<style>
    .progress-bar {
        animation: progressBar 5s linear forwards;
    }

    @keyframes progressBar {
        from { width: 100%; }
        to { width: 0%; }
    }

    .flash-message.fade-out {
        transform: translateX(100%);
        opacity: 0;
    }
</style>
